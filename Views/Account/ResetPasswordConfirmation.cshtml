@{
    ViewBag.Title = "Reset password confirmation";
}
@section viewInit {
    @if (User.Identity.IsAuthenticated) {
        <script type="text/javascript">
            console.log(100, 'You are already logged in.\nRedirecting...');
            setTimeout(() => {
                window.location.href = '/';
            }, 1000);
        </script>
    } else { // Your password has been reset.
        <div class="external-progress">
            <div class="progress">
                <div class="progress-bar progress-bar-info progress-bar-striped active"
                     aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"
                     style="width: 100%;">
                    <div class="text">Authenticating...</div>
                </div>
            </div>
        </div>
        <script type="text/javascript">
            console.log(100, 'Your password has been reset.\nRedirecting...');
            setTimeout(() => {
                window.location.href = '/';
            }, 1000);
        </script>
    }
}