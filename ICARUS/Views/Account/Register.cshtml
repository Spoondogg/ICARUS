@model ICARUS.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" })) {
    <h4>Create a new account</h4>

    <div class="form-group-container">
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            <div class="element-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            <div>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            <div>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        @* http://www.dotnetcurry.com/aspnet-mvc/1102/aspnet-mvc-role-based-security *@
        <div class="form-group">
            @Html.Label("Role", new { @class = "control-label" })
            <div>
                <select class="form-control" name="Name" id="Name" required="required">
                    <option></option>
                    <option value="User">User</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    </div>
}

@section viewInit {
    @if (!User.Identity.IsAuthenticated) {
        <script type="text/javascript">
            app.register();
        </script>
    } else {
        <script type="text/javascript">
            app.loader.log(100, 'You are already logged in.\nRedirecting...');
            setTimeout(function () {
                location.href = '/';
            }, 1000);
        </script>
    }
}