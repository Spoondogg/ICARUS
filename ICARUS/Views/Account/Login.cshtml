@using ICARUS.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
@section viewInit {
    @if (!User.Identity.IsAuthenticated) {
        <script type="text/javascript">
            app.login();
        </script>
    } else {
        <script type="text/javascript">
            console.log(100, 'You are already logged in.\nRedirecting...');
            setTimeout(function () {
                location.href = '/';
            }, 1000);
        </script>
    }
}