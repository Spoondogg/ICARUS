@model ICARUS.Models.FormCategory
@{
    ViewBag.Title = "Edit";
}
<h2>Edit Form Group</h2>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <h4>Edit Values for Form Category @Model.id</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    <div class="form-group">
        @Html.LabelFor(model => model.label, htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.EditorFor(model => model.label, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.label, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div>
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}
<h4>
    @Html.ActionLink("Back to List", "Index") | 
    @Html.ActionLink("Elements", "Index", "FormElements", new { id = Model.id }, null)
</h4>