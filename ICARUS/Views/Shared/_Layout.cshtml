<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="apple-mobile-web-app-title" content="@ViewBag.Title">
    <meta name="description" content="@ViewBag.Description" />
    <meta name="author" content="Ryan Dunphy" />
    <meta name="theme-color" content="#FFF" />
    <title>@ViewBag.Title - ICARUS @ViewBag.Version</title>
    @* Preload these scripts *@
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato|Raleway">
    @Styles.Render("~/Content/css/styles.css")
    @Scripts.Render("~/bundles/scripts.js")
    <!--<script src="@Url.Content("~/Scripts/icarus/icarus.js")"></script>-->
    <link rel="icon" href="@Url.Content("~/Content/favicon.ico")" />
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/Images/Logo.png")" />
    <link rel="apple-touch-startup-image" href="@Url.Content("~/Content/Images/Logo.png")" />
    <link rel="manifest" href="/manifest.json">
</head>
<body>

    @Html.AntiForgeryToken()

    @RenderSection("Splash", required: false)
    @RenderSection("ServiceWorker", required: false)

    <!--<script src="@Url.Content("~/Scripts/injector/main.js")" type="module"></script>-->
    @*
        Globals
        These values need to be declared here so that they have access to server values
    *@
    <script>
        var user = '@(User.Identity.Name == "" ? "Guest" : User.Identity.Name)';
        var dev = @(User.IsInRole("Dev") ? 1 : User.IsInRole("Admin") ? 1 : 0) ? true : false;
        var appId = @ViewBag.id;
    </script>


    @RenderBody()

    <noscript>
        <p>JavaScript must be enabled for this page to function.</p>
        <p><a href="/noScript">Click here for details</a></p>
    </noscript>

    @RenderSection("Scripts", required: false)
    @RenderSection("viewInit", required: true)

</body>
</html>
