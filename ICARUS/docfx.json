{
  // https://dotnet.github.io/docfx/tutorial/docfx.exe_user_manual.html#3-docfxjson-format
  "metadata": [
    {
      "src": [
        {
          "files": [
            "*.csproj"
          ],
          "cwd": ".",
          "exclude": [
            "**/api/**",
            "**/bin/**",
            "Documentation/**"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [          
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": "fusion/**"
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "Documentation/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [ // ie: images that the site will use
          "Content/favicon.ico",
          "Content/icon50.png"
        ],
        "exclude": [
          "**/bin/**",
          "obj/**",
          "Documentation/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "obj/**",
          "Documentation/**"
        ]
      }
    ],
    "dest": "Documentation/docfx",
    "template": [
      "default"
    ],
    "globalMetadata": {
      "_appTitle": "Icarus docFx API",
      "_appFooter": "Copyright © 2017 - 2018 Ryan Dunphy",
      "_appLogoPath": "Content/icon50.png",
      "_appFaviconPath": "Content/favicon.ico",
      "_gitContribute": {
        "repo": "https://github.com/Spoondogg/ICARUS",
        "branch": "dev",
        "apiSpecFolder": "docs-ref-overwrite"
      }
    }
  }
}